                            <div class="card-body">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="control-label">Accidentes</label>
                                                <input asp-for="BDAccidente.NúmeroDeEventos" class="form-control" required="required"/>
                                                <span asp-validation-for="BDAccidente.NúmeroDeEventos" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <input type="submit" value="Guardar" class="btn btn-primary" />
