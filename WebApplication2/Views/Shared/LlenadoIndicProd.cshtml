}
<div onpageshow="myFunction()" class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h3>Llenado de indicadores</h3>
                    <h1 style="color:darkslateblue">@ViewData["message"]</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Llenado de indicadores  </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

